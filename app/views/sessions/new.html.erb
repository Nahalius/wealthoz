<% provide(:title, "Sign in") %>
<h3>Sign in</h3>

<div class="row">
  <div class="col-md-6">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <br>
      <%= f.text_field :email %>
      <%= f.label :email %>

      <br>
      <%= f.password_field :password %>
      <%= f.label :password %>
      <br>

      <%= f.submit "Sign in", class: "btn btn-success" %>
    <% end %>
    <br>
    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>
