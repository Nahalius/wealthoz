<% provide(:title, "Edit Group") %>
<h1>Update your group settings</h1>

<div class="row">
  <div class="span6 offset3">
<p>  
      <%= form_for(@group) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label :fx_id, "Change Your Currency" %>
      <%= f.collection_select(:fx_id, Fx.all, :id, :fx ) %>

      <%= f.submit "Save changes", class: "btn btn-large btn-success" %>
    <% end %>   
</p>
