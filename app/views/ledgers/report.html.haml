%section
  %ul.nav.nav-tabs{style: "margin-bottom: 15px"}
    %li
      %h5
        = current_user.group.name
    %li.active
      = link_to 'Balance WU', report_balance_ledgers_path, remote: true, data: { target: '#balance', toggle: 'tab'}
    %li
      = link_to 'P&L Monthly', report_plm_ledgers_path, remote: true, data: { target: '#plm', toggle: 'tab'}
    %li
      = link_to 'P&L Wealth Unit', report_plwu_ledgers_path, remote: true, data: { target: '#plwu', toggle: 'tab'}
    %li
      = link_to "KPI's", report_kpi_ledgers_path, remote: true, data: { target: '#kpi', toggle: 'tab'}

#myTabContent.tab-content
  #balance.tab-pane.fade.active.in
    = render 'ledgers/reports/report_balance'
  #plm.tab-pane.fade
  #plwu.tab-pane.fade
  #kpi.tab-pane.fade
