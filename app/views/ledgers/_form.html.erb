      <%= f.collection_select(:wunit, @wunits,:name ,:name) %>
      <%= f.label :wunit %>

      <br>
      <%= f.date_select :post_date %>
      <%= f.label :post_date %>

      <br>
      <%= f.text_field :ammount %>
      <%= f.label :ammount %>

      <br>
      <%= f.text_field :text %>
      <%= f.label :text %>

      <br>
	</div>

	<div class="ledgers">
		<%= f.submit "Save", class: "btn btn-sm btn-success" %>
	</div>
<% end %>
