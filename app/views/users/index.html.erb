<% provide(:title, 'All users') %>
<h4>Number of registered Users: <span class="badge"><%= @users.all.count %></span></h4>


<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user %>
      <%= link_to user.name, user %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>